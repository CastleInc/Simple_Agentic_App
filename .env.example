# MongoDB Configuration
MONGODB_URI=mongodb://localhost:27017/
MONGODB_DATABASE=your_database_name

# LLM Configuration (supports OpenAI, Ollama, or any OpenAI-compatible endpoint)
LLM_API_KEY=your_api_key_here_or_fake-key_for_ollama
LLM_MODEL_NAME=llama3.1
LLM_BASE_URL=http://localhost:11434/v1

# LLM Settings
LLM_SUPPORTS_TOOL_CALLING=true

# MCP Server Configuration
# CVE Query Server
MCP_CVE_SERVER_ENABLED=true
MCP_CVE_SERVER_COMMAND=python
MCP_CVE_SERVER_ARGS=mcp_server.py

# Add more MCP servers as needed
# Example: Weather Server
# MCP_WEATHER_SERVER_ENABLED=false
# MCP_WEATHER_SERVER_COMMAND=python
# MCP_WEATHER_SERVER_ARGS=mcp_weather_server.py
