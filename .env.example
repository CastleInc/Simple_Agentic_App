# MongoDB Configuration
MONGODB_URI=mongodb://localhost:27017/
MONGODB_DATABASE=genai_kb

# LLM Configuration (Ollama)
LLM_API_KEY=fake-key
LLM_MODEL_NAME=llama3.1
LLM_BASE_URL=http://localhost:11434/v1
LLM_MODEL_HOST=http://localhost:11434/v1

# LLM Settings
LLM_SUPPORTS_TOOL_CALLING=true
LLM_TEMPERATURE=0.7
LLM_MAX_TOKENS=4096
LLM_TIMEOUT=60.0

# Agent Settings
AGENT_MAX_ITERATIONS=5
AGENT_SYSTEM_PROMPT_TYPE=default
TOOL_CALL_TIMEOUT=30.0

# MCP Server Configuration
MCP_CVE_SERVER_ENABLED=true
MCP_CVE_SERVER_COMMAND=python
MCP_CVE_SERVER_ARGS=mcp_server.py
MCP_CVE_SERVER_DESCRIPTION=CVE Query Server
MCP_STARTUP_TIMEOUT=10.0

